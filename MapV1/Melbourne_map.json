{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Map of Sold Houses in Melbourne",
    "layer": [
      {
        "data": {
          "url": "data/LGA_POLYGON_crop.json",
          "format": {
            "type": "topojson", 
            "feature": "LGA_POLYGON"
          }
        },
        "mark": {
          "type": "geoshape", 
          "stroke": "black", "strokeWidth": 1
        }
      },
      {
        "data": {
          "url": "data/Melbourne_housing.csv"
        },
        "mark": {
          "type": "point" 
          },
        "encoding": {
          "longitude": {
            "field": "Longtitude", 
            "type": "quantitative"
          },
          "latitude": {
            "field": "Lattitude", 
            "type": "quantitative"
          },
          "color": {
            "field": "Price",
            "type": "quantitative",
            "title": "Sold Price (AUD)",
            "scale": {
              "scheme": "reds"
            }
          }
        }
      }
    ]
  }